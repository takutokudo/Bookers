<h1>NEW BOOK</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>TITLE</h4>
  <%= f.text_field :title %>

  <h4>BODY</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>